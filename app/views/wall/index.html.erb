    <!-- Page Content -->
    <div class="container">
        <div class="row">

            <div class="col-lg-12">

                <h1>Post a message</h1>
                <form action="/posts" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <input type="hidden" name="post[user_id]" value="<%= current_user.id %>"> 
                    <textarea name="post[post]" class="form-control"></textarea>
                    <br />
                    <button type="submit" class="btn btn-primary">Post</button>
                </form>
            </div>
            <hr>
        </div>       
        <hr>
        <div class="row">
            <div class="col-lg-12">
		            <%if flash[:danger] %>
		                <% flash[:danger].each do |error| %>
		                    <h5 class="alert alert-danger"><%=error %></h5>
		                <% end %>
		            <% end %>

		            <% if flash[:success] %>
		                <h5 class="alert alert-success"><%=flash[:success]%></h5>
		            <% end %>
                <% @posts.reverse.each do |post| %>
                    <h5>Posted by: <%= post.user.first_name %> on <%= post.created_at.strftime("%B %d, %Y at %I:%M %p") %></h5>
                    <p><%= post.post %></p>
            </div>
            <div class="col-lg-12">
                
                <% post.comments.reverse.each do |comment| %>
                <h5>Comment by <%= comment.user.first_name %> on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %><%=%></h5>
                        <p><%= comment.comment %></p>
                <% end %>
                <br>
                <form action="/comments" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <input type="hidden" name="comment[user_id]" value="<%= current_user.id %>">
                    <input type="hidden" name="comment[post_id]" value="<%= post.id %>"> 
                    <textarea name="comment[comment]" class="form-control"></textarea>
                    <br />
                    <button type="submit" class="btn btn-success">comment</button>
                </form>      
            </form>
            <% end %>
            </div>
        </div>
    </div>

